        <Image Margin="304,26,244,217" Source="F:\SE\ky9\PRN212\HighLand\HighLand\images\logoLogin.png" />
        <PasswordBox x:Name="txtPassword"  Margin="306,298,207,78" FontSize="18" />
        <Label Content="Email" HorizontalAlignment="Left" Margin="217,247,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="lbPassword" Content="Password" HorizontalAlignment="Left" Margin="217,297,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
